#client
	border:solid 1px black
	overflow:auto
	min-width:650px
	#servers
		float:left
		max-width:300px
		#server-list
			padding-left:0
			li
				list-style:none
				.connected
					color:green
				.disconnected
					color:red
	#rooms
		min-width:400px
		margin-left:150px
		.ui-tabs-nav
			height:25px
			padding:2px
			.ui-state-default
				a
					padding:3px 8px
		.users
			.userList
				list-style:none
				padding-left:0
		.room
			overflow:auto
			padding:5px
			.toolbar
				clear:both
				border-bottom:solid 1px black
				.menuButton
					width:50px
					height:50px
					display:inline-block
					text-align:center
					margin-right:10px
					vertical-align:middle
					background-color:blue
			.users
				overflow:auto
				float:left
				width:100px
				border-right:solid 1px black
				height:100%
			.messages
				overflow:auto
				height:200px
				.message
					.sender
						width:80px
						text-align:right
						display:inline-block
					.text
						padding-left:10px
			.messageInput
				float:left
				width:99%
