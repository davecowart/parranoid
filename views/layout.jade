doctype 5
html
	head
		title Parranoid
		link(rel='stylesheet', href='/stylesheets/themes/ui-lightness/jquery-ui-1.8.23.custom.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		if user
			p Welcome, #{user.email}
			ul
				li
					a(href='/logout') Logout
				li
					a(href='/credentials') IRC Credentials
				li
					a(href='/client') Client
		else
			ul
				li
					a(href='/login') Login
				li
					a(href='/register') Register

		block content

		script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js', type='text/javascript')
		script(src='//ajax.googleapis.com/ajax/libs/jqueryui/1.8.23/jquery-ui.min.js', type='text/javascript')
		script(src='/javascripts/knockout-2.1.0.js', type='text/javascript')
		script(src='/javascripts/underscore-min.js', type='text/javascript')
		block script